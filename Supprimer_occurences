#include<stdio.h>
#include<stdlib.h>
typedef struct noeud{
int donne;
struct noeud*suivant;
}noeud;
noeud*creenoeud(noeud*l,int n){
    noeud*tete,*p;
    tete=(noeud*)malloc(sizeof(noeud));
    printf("entre la tete de la liste");
    scanf("%d",&tete->donne);
    tete->suivant=NULL;
    l=tete;
    for(int i=2; i<=n; i++){
            p=(noeud*)malloc(sizeof(noeud));
        printf("entre le %d element",i);
        scanf("%d",&p->donne);
    l->suivant=p;
    p->suivant=NULL;
    l=p;
    }
    l=tete;
}
void affiche(noeud*l){
noeud*t=l;
printf("les element de la liste sont");
while(t!=NULL){
printf(" %d ",t->donne);
t=t->suivant;
}

}
noeud* supprimeoccurence(noeud*tete,int s){
noeud*t=tete;
noeud*prec=NULL;
noeud*a;

while(t!=NULL){
    if(t->donne==s){
        a=t;
        if(prec==NULL){
            tete=t->suivant;
            free(t);
            t=tete;

        }else{
        prec->suivant=t->suivant;
        t=prec->suivant;
            free(a);
    }


        }else{
        prec=t;
        t=t->suivant;
}
}
return tete;
}




int main(){
    int n,s;
    printf("entre le nombre d'element que vous voulez entre");
    scanf("%d",&n);
noeud*liste;
noeud*tete;
liste=creenoeud(tete,n);
affiche(liste);
printf("entre l'element a supprimer");
scanf("%d",&s);
liste=supprimeoccurence(liste,s);
affiche(liste);
}









